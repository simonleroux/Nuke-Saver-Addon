{
    "name": "Nuke Saver",
    "author": "Bell Canada",
    "manifest_version": 2,
    "version": "2.2",
    "icons": {
        "48": "data/images/Nuke-Saver-icon-48.png",
        "128": "data/images/Nuke-Saver-icon-128.png"
    },
    "description": "Avoid creating outages by hiding the infamous remove all button as well as the buttons that delete users.",
    "content_scripts": [
        {
            "matches": [
                "http://*/ccmadmin/*",
                "https://*/ccmadmin/*"
            ],
            "js": [
                "script.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "data/images/Nuke-Saver-icon-48.png",
            "128": "data/images/Nuke-Saver-icon-128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "applications": {
        "gecko": {
            "update_url": "https://raw.githubusercontent.com/simonleroux/Nuke-Saver-Addon/master/updates.json",
            "id": "nuke_saver_firefox@bell.ca"
      }
    }
}
